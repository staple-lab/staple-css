{
  "name": "@staple-css/tokens",
  "version": "0.2.0",
  "description": "Design tokens for staple-css â€” semantic CSS variables with a 5-level hierarchical architecture. Includes OKLCH color tools and 22 Tailwind-compatible palettes.",
  "homepage": "https://css.staplelab.com",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./color": {
      "types": "./dist/color/index.d.ts",
      "import": "./dist/color/index.js"
    },
    "./generator": {
      "types": "./dist/generator/index.d.ts",
      "import": "./dist/generator/index.js"
    },
    "./tokens.css": "./dist/tokens.css",
    "./themes.css": "./dist/themes.css",
    "./palettes.css": "./dist/palettes.css",
    "./all.css": "./dist/all.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "npm run generate && tsup",
    "generate": "node --import tsx src/generate.ts",
    "dev": "tsup --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "tsup": "^8.3.5",
    "tsx": "^4.19.2"
  },
  "keywords": [
    "css",
    "tokens",
    "design-system",
    "css-variables",
    "theming",
    "design-tokens",
    "oklch",
    "color-palette",
    "tailwind",
    "dark-mode",
    "accessibility",
    "wcag",
    "semantic-tokens"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/staple-lab/staple-css.git",
    "directory": "packages/tokens"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
