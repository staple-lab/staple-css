{
  "name": "@staple-css/primitives",
  "version": "0.2.0",
  "description": "Ultra-lightweight React primitives: Box, Flex, Text (2.5 KB gzip core). Optional full edition with Grid, Container, Card (8.23 KB gzip).",
  "homepage": "https://staple-lab.github.io/staple-css/primitives",
  "type": "module",
  "main": "./dist/core.js",
  "module": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./full": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./primitives.css": "./dist/primitives.css",
    "./core.css": "./dist/core.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "peerDependencies": {
    "@staple-css/tokens": ">=0.1.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@staple-css/tokens": "*",
    "react": "^19.0.0",
    "tsup": "^8.3.5"
  },
  "keywords": [
    "css",
    "react",
    "primitives",
    "design-system",
    "layout",
    "components",
    "typescript",
    "responsive",
    "flex",
    "grid",
    "breakpoints",
    "box",
    "row",
    "column",
    "container",
    "card",
    "typography",
    "ui-components"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/staple-lab/staple-css.git",
    "directory": "packages/primitives"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
